{% extends 'menuAdmin.html.twig' %}
      
{% block body %}
<!--//////////DEBUT CONTENU PAGE//////////-->
<section id="main-content">
          <section class="wrapper">            
    <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li>Historisation</li>                          
                    </ol>
                </div>
            </div>
<form class="form-inline" role="form">
          <div class="col-xs-6 col-sm-3">
                  <select class="form-control" id="exampleSelect1">
					<option value="" disabled selected>Choisir un acteur</option>
                    <option>Stéphane OLLIVIER</option>
                  </select>
                  </div>
				<div class="col-xs-6 col-sm-3">
                          <div class="input-group date" id='form_date_debut'>
							<input class="form-control" type="text" placeholder="Date début">
							<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
						  </div>
                        </div>
				<div class="col-xs-6 col-sm-3">	
                          <div class="input-group date" id='form_date_fin'>
							<input class="form-control" type="text" placeholder="Date fin">
							<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
						  </div>
                  </div>
         <div class="col-xs-6 col-sm-3">
                <button type="submit" class="btn btn-success">Rechercher</button> 
                <div><br></div>
        </div>

    </form>


<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                           <tbody>
                              <tr>
                                 <th>Date</th>
                                 <th>Acteur</th>
                                 <th>Détail</th>
                              </tr>
                              {% for historisation in liste_historisation %}
                              <tr>
                                 <td>{{ historisation.dateheuremodif }}</td>
                                 <td>{{ historisation.auteur }}</td>
                                 <td>{{ historisation.detail }}</td>
                              </tr>
                              {% endfor %}
                           </tbody>
                        </table>
                  </section>
             </section>
<!--//////////DEBUT CONTENU PAGE//////////-->
{% endblock %}

{% block js %}
	<script type="text/javascript">
	$(function () {
		$('#form_date_debut').datetimepicker({
			format: 'DD MMMM YYYY',
			widgetPositioning: {
				horizontal: 'right' 
			},
			showTodayButton: true
		});
		$('#form_date_fin').datetimepicker({
			format: 'DD MMMM YYYY',
			widgetPositioning: {
				horizontal: 'right' 
			},
			showTodayButton: true
		});
    });
    </script>
{% endblock %}
