{% extends 'menuAdmin.html.twig' %}

{% block body %}
    <!--/////////////DEBUT CONTENU PAGE/////////////-->
    <section id="main-content">
        <section class="wrapper">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><i class="fa fa-laptop"></i>Consultation module indépendant</li>
                </ol>
                <div class="bs-example">
                    <form class="form-inline" role="form">
                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <label class="sr-only" for="inputNom">Libelle</label>
                            <input type="text" class="form-control" id="inputNom" placeholder="Libelle">
                        </div>

                        <div class="col-md-3 col-sm-3 col-xs-6">
                            <button type="submit" class="btn btn-success">Rechercher</button>
                            <div><br></div>
                        </div>

                    </form>
                </div>
            </div>
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Libelle</th>
                    <th>Durée en heures</th>
                    <th>Durée en semaine</th>
                    <th>Libelle court</th>
                    <th>Détail</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for moduleindependant in moduleindependants %}
                    <tr>
                        <td>{{ moduleindependant.libellemoduleind }}</td>
                        <td>{{ moduleindependant.dureeenheures }}</td>
                        <td>{{ moduleindependant.dureeensemaines }}</td>
                        <td>{{ moduleindependant.libellecourtmoduleind }}</td>
                        <td>{{ moduleindependant.detailmodulind }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('moduleindependant_delete', { 'idmoduleindependant': moduleindependant.idmoduleindependant }) }}">delete</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a class="btn btn-success" href="{{ path('moduleindependant_new') }}">Création</a>
        </section>
    </section>


    <!--//////// DEBUT MODAL RECHERCHE //////////-->
    <div id="myModalSupprimer" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Suppression module indépendant</h4>
                </div>
                <div class="modal-body">

                    <!--///// LIBELLE DU MODULE //////-->
                    <div class="panel-body">
                        <p>Voulez-vous supprimer ce module indépendant ? </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Supprimer</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--//////// FIN MODAL //////////-->


    <!--/////////////FIN CONTENU PAGE/////////////-->
{% endblock %}
