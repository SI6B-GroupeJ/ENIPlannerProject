{% extends 'menuAdmin.html.twig' %}


{% block body %}
    <!--main content start-->
    <section id="main-content" xmlns="http://www.w3.org/1999/html">
        <section class="wrapper">
            <!--overview start-->

            <!--//////////
            MENU
            //////////
            -->
            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb">
                        <li><i class="fa fa-laptop"></i>Recherche d'un stagiaire</li>
                    </ol>
                </div>
            </div>
            <div class="bs-example">
                <form action="{{ path('home') }}" class="form-inline" role="form" method="post">
                    <div class="col-xs-5 col-sm-5 col-md-3">
                        <label class="sr-only" for="inputNom">Nom</label>
                        <input type="text" class="form-control" id="inputNom" placeholder="Nom" name="Nom">
                    </div>

                    <div class="col-xs-5 col-sm-5 col-md-3">
                        <label class="sr-only" for="inputPrenom">Prenom</label>
                        <input type="text" class="form-control" id="inputPrenom" placeholder="Prénom" name="Prenom">
                    </div>
                    <div class="col-xs-5 col-sm-5 col-md-3">
                        <label class="sr-only" for="inputPrenom">Entreprise</label>
                        <input type="text" class="form-control" id="inputEntreprise" placeholder="Entreprise" name="Entreprise">
                    </div>

                    <div class="col-xs-4 col-sm-4 col-md-2">
                        <input type="submit" class="btn btn-success" value="Rechercher" />
                        <div><br></div>
                    </div>
                </form>
            </div>

            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Entreprise</th>
                    <th>Formation</th>
                    <th>Date Début</th>
                    <th>Date Fin</th>
                    <th>Statut</th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </section>
    </section>
{% endblock %}