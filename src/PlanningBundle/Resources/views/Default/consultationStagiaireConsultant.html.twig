<!--//////// DEBUT MODAL RECHERCHE //////////-->
<div id="myModalTelecharger" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Télécharger le planning</h4>
        </div>
      <div class="modal-body">
                      <section class="panel">
                          <header class="panel-heading">
                              Télécharger le planning
                          </header>
                          <!--///// LIBELLE DU MODULE //////-->
                          <div class="panel-body">
                              <form class="form-horizontal" role="form">
                                  <div class="form-group" style="text-align: center">
                                      <label class="radio-inline"><input type="radio" name="optradio">PDF</label>
                                      <label class="radio-inline"><input type="radio" name="optradio">RTF</label>
                                      <label class="radio-inline"><input type="radio" name="optradio" checked>Les deux</label>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-8">
                                          <input type="text" class="form-control" placeholder="">
                                        </div>
                                         <div class="btn-group">
                                            <a class="btn btn-primary" href="#">Parcourir</a>
                                          </div> 
                                    </div>
                
                                  </form>
                              </div>

                      </section>
            </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Télécharger</button>
      </div>
    
  </div>
  </div>
</div>
<!--//////// FIN MODAL //////////-->


<!--//////// DEBUT MODAL Valider //////////-->
<div id="myModalValider" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Valider le calendrier</h4>
        </div>
      <div class="modal-body">
  
                          <!--///// LIBELLE DU MODULE //////-->
                          <div class="panel-body">
                            <p>Voulez-vous valider ce calendrier ? </p>
                          </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Valider</button>
      </div>
    </div>
  </div>
  </div>
</div>
<!--//////// FIN MODAL //////////-->

<!--//////// DEBUT MODAL Invalider //////////-->
<div id="myModalInvalider" class="modal fade" role="dialog">
  <div class="modal-dialog">
